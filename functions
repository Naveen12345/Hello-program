*TO FIND MAX VALUE USING FUNCTIONS 

package main

import "fmt"

func main() {
   
   var a int = 1243
   var b int = 1345
   var ret int

   
   ret = findmax(a, b)

   fmt.Printf( "Max value is : %d\n", ret )
}


func findmax(n1, n2 int) int {
   
   var result int

   if (n1 > n2) {
      result = n1
   } else {
      result = n2
   }
   return result 
}

OUTPUT :-

Max value is : 1345


*TO FIND MINIMUM VALUE USING FUNCTIONS 


package main

import "fmt"

func main() {
   
   var a int = 1243
   var b int = 1345
   var ret int

   
   ret = findmin(a, b)

   fmt.Printf( "Minimum value is : %d\n", ret )
}


func findmin(n1, n2 int) int {
   
   var result int

   if (n1 < n2) {
      result = n1
   } else {
      result = n2
   }
   return result 
}

OUTPUT:-

Minimum value is : 1243


*TO FIND SQUARE  VALUE USING FUNCTIONS 

package main

import "fmt"

func main() {
   
   var a int = 6
   var ret int

   
   ret = square(a)

   fmt.Printf( "Square of a is : %d\n", ret )
}


func square(n1 int) int {
   
   var result int

   if (n1 > 1) {
      result = n1*n1
    }
   return result 
}

OUTPUT:-

Square of a is : 36


4)package main

